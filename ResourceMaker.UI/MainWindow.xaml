<Window x:Class="ResourceMaker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourceMaker.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="ResourceMaker ツールメニュー" FontSize="16" Margin="0,0,0,20"/>
            <Button Content="言語選択ウィンドウを開く" Click="OpenLanguageWindow_Click" Margin="0,0,0,10"/>
            <Button Content="リソース編集ウィンドウを開く" Click="OpenResourceWindow_Click"/>
        </StackPanel>
    </Grid>
</Window>
