<Window  xmlns:windows="clr-namespace:System.Windows;assembly=PresentationFramework"
        x:Class="ResourceMaker.LanguageSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourceMaker"
        mc:Ignorable="d"
        Title="LanguageSelectionWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="使用したい言語を選択してください" FontSize="14" Margin="0,0,0,10"/>
            <CheckBox Content="ja-JP（日本語）"/>
            <CheckBox Content="en-US（英語）"/>
            <CheckBox Content="fr-FR（フランス語）"/>
            <TextBlock Text="追加したい言語コード"/>
            <TextBox Name="CustomLanguageBox" Width="150"/>
            <Button Content="選択確定" Margin="0,10,0,0" Click="ConfirmLanguage_Click"/>
        </StackPanel>
    </Grid>
</Window>
